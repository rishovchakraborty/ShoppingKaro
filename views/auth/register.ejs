<%- include('../includes/header.ejs') %>
<link rel="stylesheet" href="/css/add-product.css" />
<style>
  .auth-form { max-width: 400px; margin: 3rem auto; background: #fff; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.07); padding: 2rem; }
  .auth-title { text-align: center; font-size: 2rem; margin-bottom: 1.5rem; }
  .auth-error { color: #ff2b2b; text-align: center; margin-bottom: 1rem; }
  .auth-success { color: #1e9c5a; text-align: center; margin-bottom: 1rem; }
  .auth-link { display: block; text-align: center; margin-top: 1.5rem; color: #1e9c5a; text-decoration: none; }
  .auth-link:hover { text-decoration: underline; }
</style>
</head>
<body>
<%- include('../includes/navbar.ejs') %>
<main>
  <form class="auth-form" action="/auth/register" method="POST">
    <div class="auth-title">Register</div>
    <% if (error) { %>
      <div class="auth-error"><%= error %></div>
    <% } %>
    <% if (success) { %>
      <div class="auth-success"><%= success %></div>
    <% } %>
    <div class="form-hero">
      <input type="text" name="name" placeholder="Name" required />
    </div>
    <div class="form-hero">
      <input type="email" name="email" placeholder="Email" required />
    </div>
    <div class="form-hero">
      <input type="password" name="password" placeholder="Password" required />
    </div>
    <div class="form-hero">
      <select name="role" required>
        <option value="user" selected>User</option>
        <option value="admin">Admin</option>
      </select>
    </div>
    <div class="form-button">
      <button type="submit">Register</button>
    </div>
    <a class="auth-link" href="/auth/login">Already have an account? Login</a>
  </form>
</main>
<%- include('../includes/footer.ejs') %> 